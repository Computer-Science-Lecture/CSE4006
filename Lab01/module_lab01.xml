<?xml version="1.0" encoding="UTF-8"?>
<project name="module_lab01" default="compile.module.lab01">
  <dirname property="module.lab01.basedir" file="${ant.file.module_lab01}"/>
  
  <property name="module.jdk.home.lab01" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.lab01" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.lab01" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.lab01" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="lab01.output.dir" value="${module.lab01.basedir}/out/production/Lab01"/>
  <property name="lab01.testoutput.dir" value="${module.lab01.basedir}/out/test/Lab01"/>
  
  <path id="lab01.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="lab01.module.production.classpath">
    <path refid="${module.jdk.classpath.lab01}"/>
  </path>
  
  <path id="lab01.runtime.production.module.classpath">
    <pathelement location="${lab01.output.dir}"/>
  </path>
  
  <path id="lab01.module.classpath">
    <path refid="${module.jdk.classpath.lab01}"/>
    <pathelement location="${lab01.output.dir}"/>
  </path>
  
  <path id="lab01.runtime.module.classpath">
    <pathelement location="${lab01.testoutput.dir}"/>
    <pathelement location="${lab01.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.lab01">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.lab01">
    <patternset refid="excluded.from.module.lab01"/>
  </patternset>
  
  <path id="lab01.module.sourcepath">
    <dirset dir="${module.lab01.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.lab01" depends="compile.module.lab01.production,compile.module.lab01.tests" description="Compile module Lab01"/>
  
  <target name="compile.module.lab01.production" depends="register.custom.compilers" description="Compile module Lab01; production classes">
    <mkdir dir="${lab01.output.dir}"/>
    <javac2 destdir="${lab01.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.lab01}/javac">
      <compilerarg line="${compiler.args.lab01}"/>
      <bootclasspath refid="lab01.module.bootclasspath"/>
      <classpath refid="lab01.module.production.classpath"/>
      <src refid="lab01.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.lab01"/>
    </javac2>
    
    <copy todir="${lab01.output.dir}">
      <fileset dir="${module.lab01.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.lab01.tests" depends="register.custom.compilers,compile.module.lab01.production" description="compile module Lab01; test classes" unless="skip.tests"/>
  
  <target name="clean.module.lab01" description="cleanup module">
    <delete dir="${lab01.output.dir}"/>
    <delete dir="${lab01.testoutput.dir}"/>
  </target>
</project>